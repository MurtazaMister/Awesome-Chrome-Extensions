{
    "name": "Competitive trainer",
    "description": "Overwhelmed by the amount of problems you see on each platfrom and unable to decide what to solve, select a random problem and ace it!",
    "version": "1.0",
    "manifest_version": 3,
    "action": {
        "default_popup": "html/leetcode.html"
    },
    "content_scripts": [
    {
        "matches": ["http://*/*","https://*/*"],
        "css": ["css/main.css"],
        "js": ["js/jquery.js", "js/main.js"]
    } ],
    "background": {
        "service_worker": "js/background.js"
    },
    "permissions": ["notifications","alarms"]
}